<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    
    <include layout="@layout/order_clear_head" />
<ScrollView  
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/myco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:text="CO币:"
        android:textColor="@color/black1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/dian_line_product_e8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        
        <TextView
          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
           
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:text="可用CO币抵"
            android:textColor="@color/black2" />
        <TextView
            android:id="@+id/usable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            
            android:text="可用CO币抵"
            android:textColor="@color/black2" />
        <TextView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="元"
            android:textColor="@color/black2" />

        <CheckBox
            android:id="@+id/cb_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/cb_gouwuche"
            android:padding="10dp" />
    </LinearLayout>

    <include layout="@layout/dian_and_xian" />

    <include layout="@layout/xian_and_dian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="优惠券"
        android:paddingLeft="10dp"
        android:textColor="@color/black1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/dian_line_product_e8" />
    <com.llg.privateproject.view.MyListView 
        android:id="@+id/lv_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/dian_line_product_e8"
        android:dividerHeight="4dp"/>
     <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/dian_line_product_e8" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke_orange2_val"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="确认"
        android:textColor="@color/orange2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white" />

</LinearLayout>
</ScrollView>
</LinearLayout>