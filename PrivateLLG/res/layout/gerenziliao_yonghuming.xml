<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
        >
<RelativeLayout 
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="30dp"
     >


<EditText android:id="@+id/et_username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:hint="请输入新昵称"
    android:paddingTop="2dp"
    android:drawableBottom="@drawable/dianline"
    android:background="@null"
    android:minWidth="80dp"
    android:textSize="12sp"
 android:layout_centerHorizontal="true"
/>
    <TextView
        android:id="@+id/_bendishangchuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:layout_toLeftOf="@id/et_username"
        android:layout_marginTop="30dp"
   
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
       
       
        
        android:text="用户名："
        android:textColor="@color/black1"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/d_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/stroke_orange2_val"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
       
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="确认修改"
        android:textColor="@color/orange2"
        android:textSize="16sp" />

</RelativeLayout>
 <ImageView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:padding="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/turn" />
</RelativeLayout>