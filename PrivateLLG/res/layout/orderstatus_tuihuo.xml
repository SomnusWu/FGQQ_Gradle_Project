<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/order_clear_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

           
            <!-- 退货退款-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    
                    android:text="*  "
                    android:textColor="@color/orange2" />
                <TextView
                    android:id="@+id/tuihuo"
                    android:layout_width="wrap_content"
                   android:drawablePadding="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                  	android:drawableRight="@drawable/wdedingdan2_tuikuanxiala"
                    android:text="退货退款"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:background="@drawable/stroke_grayline_r2"
                    android:textColor="@color/black2" />
            </LinearLayout>
            
           
            <!-- 选择原因-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    
                    android:text="*  "
                    android:textColor="@color/orange2" />
                <TextView
                    android:id="@+id/yuanyin"
                    android:layout_width="wrap_content"
                   android:drawablePadding="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                  	android:drawableRight="@drawable/wdedingdan2_tuikuanxiala"
                    android:text="选择原因"
                      android:textSize="12sp"
                      android:padding="5dp"
                      android:background="@drawable/stroke_grayline_r2"
                    android:textColor="@color/black2" />
            </LinearLayout>
            
            <!-- 选择原因-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    
                    android:text="*  "
                    android:textColor="@color/orange2" />
                <TextView
                    android:layout_width="wrap_content"
                 
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="退款金额"
                      android:textSize="12sp"
                     
                    
                    android:textColor="@color/black2" />
                <EditText
                    android:layout_width="wrap_content"
                 
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/stroke_grayline_r2"
                    android:hint="请输入退款金额"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColorHint="@color/black3"
                    android:minWidth="100dp"
                      android:textSize="12sp"
                     android:inputType="numberDecimal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black2" />
                <TextView
                    android:layout_width="wrap_content"
                 
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="元"
                      android:textSize="12sp"
                     
                    
                    android:textColor="@color/black2" />
                <TextView
                    android:layout_width="wrap_content"
                 
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="（最多123.33元）"
                      android:textSize="10sp"
                     
                    
                    android:textColor="@color/black3" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 >
				<TextView android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="说明  "
				    android:layout_gravity="center_vertical"
				    android:textColor="@color/black2"/>
                <EditText
                    android:id="@+id/et_pinglun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/stroke_grayline_r2"
                    android:hint="退货退款原因说明。（限60字）"
                    android:maxLength="60"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black6" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                 >
				<TextView
				    android:id="@+id/pingzheng"
                    android:layout_width="wrap_content"
                   android:drawablePadding="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                  	android:drawableRight="@drawable/wdedingdan2_tuikuanxiala"
                    android:text="上传凭证图片"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:background="@drawable/stroke_grayline_r2"
                    android:textColor="@color/black2" />
                <TextView
                    android:layout_width="wrap_content"
                 
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="（您还可以上传3张图片）"
                      android:textSize="10sp"
                     
                    
                    android:textColor="@color/black3" />
            </LinearLayout>
            <!-- 添加评价图片 -->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                 >

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/ll_pics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
<!--商家服务描述  -->
            
            
          <include layout="@layout/dian_and_xian" />
          <TextView 
              android:id="@+id/confirm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="发表评价"
              android:textColor="@color/orange2"
              android:background="@drawable/stroke_orange2_val"
              android:textSize="18sp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="5dp"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="30dp"
              android:layout_gravity="center_horizontal"
              android:paddingBottom="5dp"
              />
        </LinearLayout>
    </ScrollView>

</LinearLayout>