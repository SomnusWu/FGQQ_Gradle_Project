<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/order_clear_head" />
<LinearLayout 
    android:id="@+id/ly_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <!-- 收货人 -->

        <TextView
            android:id="@+id/_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="收货人："
            android:textColor="@color/black2" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/_name"
            android:background="@null"
            android:hint="请输入收货人姓名"
            android:maxLength="10"
            android:textColor="@color/black2"
            android:textColorHint="@color/black3"
            android:textSize="13sp" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/_name"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dian_line_product_e8" />
        <!-- 手机号 -->

        <TextView
            android:id="@+id/_telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_marginLeft="20dp"
            android:text="手机/固话："
            android:textColor="@color/black2" />

        <EditText
            android:id="@+id/telphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/_telphone"
            android:background="@null"
            android:hint="请输入送货联系电话"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black2"
            android:textColorHint="@color/black3"
            android:textSize="13sp" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/_telphone"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dian_line_product_e8" />
        <!-- 地区 -->

        <TextView
            android:id="@+id/_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginLeft="20dp"
            android:text="地区："
            android:textColor="@color/black2" />

        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/_area"
            android:background="@null"
            android:drawableRight="@drawable/dingdanzhifu_xiafan"
            android:hint="请选择街道"
            android:textColor="@color/black2"
            android:textColorHint="@color/black3"
            android:textSize="14sp" />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/area"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dian_line_product_e8" />
        <!-- 街道 -->

        <TextView
            android:id="@+id/_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3"
            android:layout_marginLeft="20dp"
            android:text="街道："
            android:textColor="@color/black2" />

        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/_street"
            android:background="@null"
            android:hint="铭邸2栋26-4"
            android:textColor="@color/black2"
            android:textColorHint="@color/black3"
            android:textSize="13sp" />

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/_street"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dian_line_product_e8" />
        <!-- 邮编 -->

        

        <View
            android:id="@+id/v5"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/street"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dian_line_product_e8" />

        <!-- 设置默认地址 -->

        <TextView
            android:id="@+id/default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v5"
            android:layout_marginLeft="20dp"
            android:text="设置为默认地址"
            android:textColor="@color/black2" />

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v5"
            android:layout_marginRight="20dp"
            android:background="@drawable/cb_gouwuche"
            android:button="@null" />

        <View
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/default_address"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dian_line_product_e8" />
    </RelativeLayout>

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_orange2_val"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="保存地址"
        android:textColor="@color/orange2" />
</LinearLayout>
</LinearLayout>
