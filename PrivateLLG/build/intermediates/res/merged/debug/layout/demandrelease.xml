<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fubu_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black6" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120px"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_fh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/bg_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/green_and_blanck2"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/fabu_rdbtn_bottom"
            android:gravity="center"
            android:text="分类"
            android:textColor="@color/green_and_blanck2"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_fb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/fabu_rdbtn_bottom_fabu"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/green_and_blanck2"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_fs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/bg_home"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/green_and_blanck2"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>