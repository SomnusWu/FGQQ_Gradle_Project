<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/more_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/threestagepage_shoppingcart_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="  购物车"
        android:textColor="@color/white" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/white" />

    <TextView
        android:id="@+id/more_guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/threestagepage_attention_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="  关    注"
        android:textColor="@color/white" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/white" />

    <TextView
        android:id="@+id/more_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/threestagepage_share_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="  分    享"
        android:textColor="@color/white" />

</LinearLayout>