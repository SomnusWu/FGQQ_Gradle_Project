<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grays"
    android:orientation="vertical" >
<RelativeLayout
    android:id="@+id/relayout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dan_blue"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/erji_fanhui_baise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_popumenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bbt_1_1_shouye_caidanlan" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grays"
        android:padding="5dp"
        android:text="注册正在审核中,请查看相关条例"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单编号:"
            android:textColor="@color/black1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1571234564657486"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收入:"
            android:textColor="@color/black1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9元"
            android:layout_marginLeft="5dp"
            android:textColor="@color/orange1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取货时间:"
            android:textColor="@color/black1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="11:20"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black2" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/send_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/wyjz_dingwei2"
            android:gravity="center"
            android:text="发货地"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/send_name"
            android:text="德克士(南平万达店)"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="距你600米"
            android:textColor="@color/black2" />

        <TextView
            android:id="@+id/tv_send_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="珊瑚路6号11-311111啥啥啥冷风机啊龙"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/recive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_send_address"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/wyjz_dingwei1"
            android:gravity="center"
            android:text="收货地"
            android:textColor="@color/black1" />

        <LinearLayout
            android:id="@+id/ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_send_address"
            android:layout_alignTop="@+id/recive_name"
            android:layout_toRightOf="@+id/recive_name"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_recive_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="3"
                android:text="珊瑚路8号22-3杀伤口上发"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/tv_distance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距你1500米"
                android:textColor="@color/black2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/recive_name"
            android:layout_below="@+id/ly"
            android:layout_marginTop="10dp"
            android:text="物流输入9元"
            android:textColor="@color/dan_blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_money"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_money"
            android:singleLine="true"
            android:text="取货时间 11:23"
            android:textColor="@color/dan_blue"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_gray_biankuang"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="查看地图"
            android:textColor="@color/black1" />
    </RelativeLayout>

</LinearLayout>