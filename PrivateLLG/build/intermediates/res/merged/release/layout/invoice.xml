<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
         <include layout="@layout/order_clear_head" />
   
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

   

        <RadioGroup
            android:id="@+id/rg_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/noinvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/cb_gouwuche"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:tag="不开发票"
                android:text="不开发票"
                android:textColor="@color/black2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/dian_line_product_e8"
                android:tag="view" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="发票类型"
            android:textColor="@color/black2" />
 <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/dian_line_product_e8" />
        <!-- 发票类别 -->

        <RadioGroup
            android:id="@+id/rg_invoicecategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <EditText
                android:id="@+id/addinvoice_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="请输入新增发票开头(个人/公司)"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/add_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/dingdanzhifu_add" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/dian_line_product_e8" />


       
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/stroke_orange2_val"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="确认"
            android:textColor="@color/orange2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white" />
    </LinearLayout>

</ScrollView>

</LinearLayout>