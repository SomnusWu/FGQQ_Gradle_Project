<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_q"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ll"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scaleType="fitXY" 
                android:layout_marginBottom="10dp"
                >
            </ImageView>
			 <TextView
                    android:id="@+id/to_see1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/stroke_lightgray"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="查看更多"
                    android:textColor="@color/black2" />
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:textSize="15sp"
                    android:text=""
                    android:textColor="@color/fenred" />

                <RadioButton
                    android:id="@+id/tb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/getredpackage"
                    android:drawablePadding="5dp"
                    android:text="a"
                    android:singleLine="true"
                      android:textColor="@color/text_fen_b2"
                     />

                <RadioButton
                    android:id="@+id/tb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/getredpackage"
                    android:drawablePadding="5dp"
                    android:text="b"
                     android:singleLine="true"
                       android:textColor="@color/text_fen_b2"/>

                <RadioButton
                    android:id="@+id/tb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@null"
                     android:singleLine="true"
                    android:drawableLeft="@drawable/getredpackage"
                    android:drawablePadding="5dp"
                    android:text="c"
                        android:textColor="@color/text_fen_b2"/>

                <RadioButton
                    android:id="@+id/tb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/getredpackage"
                    android:drawablePadding="5dp"
                    android:text="d"
                     android:singleLine="true"
                    android:textColor="@color/text_fen_b2"
                      />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_red_hint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/red_package_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="风购全球"
                    android:textColor="@color/meihong"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/to_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/stroke_lightgray"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="查看更多"
                    android:visibility="gone"
                    android:textColor="@color/black2" />
            </LinearLayout>

            <TextView
                android:id="@+id/fgqqg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:text="FGQQG.COM"
                android:visibility="gone"
                android:textColor="@color/black2"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/black1" />
                 <View android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/eanswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_size_rectangle_o"
                    android:hint="输入答案收红包"
                    android:padding="5dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/bjg_hongbao_button"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:textColor="@color/meihong" />
                <View android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/black8"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_pingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
             
                android:padding="10dp" >

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:background="@drawable/acm_inputbox"
                    android:hint="太爱你,的红包啦!"
                    android:padding="5dp"
                    android:textColor="@color/black1"
                    android:textColorHint="@color/black3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/solid_meihong"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="评价"
                    android:textColor="@color/white" />
            </LinearLayout>
            <com.llg.privateproject.view.MyListView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:listSelector="@color/white"
              android:dividerHeight="0dp"
                android:id="@+id/ll_comment">
                
            </com.llg.privateproject.view.MyListView>
            <LinearLayout
                    android:id="@+id/ll_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@color/black2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:text="点击查看更多评论"
                        android:textColor="@color/black2"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/black2" />
                </LinearLayout>
              
               
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/order_clear_head" />

</FrameLayout>