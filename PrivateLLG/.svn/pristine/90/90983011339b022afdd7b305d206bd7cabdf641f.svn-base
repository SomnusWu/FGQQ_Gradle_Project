<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical" 
    android:paddingBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费总额"
          
            android:textColor="@color/black1" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_solid_graywhite_r"
            android:hint="请输入消费金额"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:textColor="@color/black1"
            android:textColorHint="@color/black2"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:id="@+id/ll_hui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        android:padding="10dp" >

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="惠"
            android:textSize="12sp"
            android:textColor="@color/white" 
            android:background="#ff6534"
            android:gravity="center"
            
            />

        <TextView
            android:id="@+id/explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
         android:textColor="@color/black2"
            android:padding="10dp"
	android:text="每满100减3元"
            android:textSize="14sp" />
        <CheckBox 
            android:id="@+id/cb_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                 android:background="@drawable/cb_status"
                 android:checked="true"
                  android:button="@null"
            />
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <View android:layout_width="match_parent"
            android:background="@drawable/dian_line_product_e8"
            android:layout_height="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="CO"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white" 
            android:background="@color/orange2"
        
            />

        <TextView
            android:id="@+id/show_can_user_co"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
         android:textColor="@color/black2"
            android:padding="10dp"
	android:text="CO可低0元"
            android:textSize="14sp" />
        <CheckBox 
            android:id="@+id/cb_s"
            android:visibility="gone"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cb_status"
             android:button="@null"
            />
    </LinearLayout>


     <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"
            android:textSize="12sp"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/pay_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
         android:textColor="@color/orange1"
            android:padding="10dp"
	android:text="0"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView 
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认买单"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="10dp"
       android:background="@drawable/solid_orange1_rectangle_r"
       android:textColor="@color/white"
        android:padding="10dp"
        />

</LinearLayout>