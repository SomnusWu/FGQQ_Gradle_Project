<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120px"
    android:background="@null"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_120px"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/dingdanzhifu_fanhui" 
       />

    <TextView
        android:id="@+id/head_tilte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="订单结算"
        android:textColor="@color/black1"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:src="@drawable/wdedingdan_tanchuqitaanniu"
        android:visibility="gone" />

    <TextView android:id="@+id/head_tilte2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/black1"
       android:text=""
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:padding="10dp"
       android:visibility="gone"
       
        />
    <CheckBox android:id="@+id/head_guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="取消关注"
      android:textColor="@color/black2"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:checked="true"
       android:padding="10dp"
       android:visibility="gone"
       android:button="@null"
        />
    <!--
  <include layout="@layout/xian_and_dian"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:layout_below="@id/turn"
  
  />
    -->

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/turn"
        android:background="@color/black8" />

</RelativeLayout>