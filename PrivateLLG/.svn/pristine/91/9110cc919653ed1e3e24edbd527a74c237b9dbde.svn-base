<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white" >


    <RelativeLayout
        android:id="@+id/top_relay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/ry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆小面"
                android:textColor="@color/black1"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minHeight="14dp"
                android:numStars="5"
                android:isIndicator="true"
                android:progressDrawable="@drawable/layer_star"
                android:rating="4"
                android:stepSize="1" />

            <LinearLayout
                android:id="@+id/ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南平"
                    android:layout_weight="1"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@color/light_grays" />

                <TextView
                    android:id="@+id/mine_collection_tv_distribution_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火锅"
                    android:visibility="gone"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="40KM"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ratingbar"
                android:text="4.0分"
                android:textColor="@color/orange1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_grade"
                android:text="158人"
                android:textColor="@color/black1"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_kubi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ry"
            android:layout_below="@+id/ry"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/black1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/youhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ry"
            android:layout_below="@+id/tv_kubi"
            android:visibility="gone"
            android:textColor="@color/black1"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>