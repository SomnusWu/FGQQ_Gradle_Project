						// TODO Auto-generated method stub
						if (customProgressSmall.isShowing()) {
							customProgressSmall.dismiss();
						} else {
							autoLoading.showExceptionLayout();
						}
					}

					@Override
					public void onBack(JSONObject json) {
						// TODO Auto-generated method stub
						ParseJson parseJson = ParseJson.getParseJson();
