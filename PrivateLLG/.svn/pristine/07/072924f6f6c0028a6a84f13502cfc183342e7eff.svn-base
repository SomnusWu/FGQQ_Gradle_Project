	Handler handler = new Handler() {
		public void handleMessage(android.os.Message msg) {
			switch (msg.what) {
			case 1:// 普通会员
				if (adapter != null) {
					adapter.notifyDataSetChanged();
					lv_member.onRefreshComplete();
				}
				break;
			case 2:// 我的会员列表
