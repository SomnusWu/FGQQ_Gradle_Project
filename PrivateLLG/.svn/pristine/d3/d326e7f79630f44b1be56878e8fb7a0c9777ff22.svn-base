<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <RelativeLayout
        android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_120px"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/dingdanzhifu_fanhui" />

        <TextView
            android:id="@+id/bangding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="绑定"
            android:textColor="@color/black1"
            android:textSize="20sp" />
    </RelativeLayout>
   <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/black3" />
   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="邮  箱："
            android:textColor="@color/black1" />

           <EditText
            android:id="@+id/et_youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/_name"
            android:background="@null"
            android:editable="true"
            android:hint="请输入您要绑定的邮箱"
        
            android:padding="5dp"
            android:textColor="@color/black2"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/dianline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newpassword_rl" 
        >

        <TextView
            android:id="@+id/_newpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="新密码："
            android:textColor="@color/black1" />

           <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/_newpassword"
            android:background="@null"
            android:editable="true"
            android:hint="请输入新密码"
        android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black2"
            android:textSize="12sp" />
    <View
        android:layout_below="@id/_newpassword"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        
        android:background="@drawable/dianline" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/_myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="验证码："
            android:textColor="@color/black1" />

        <EditText
            android:id="@+id/myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/_myid"
            android:background="@null"
            android:editable="true"
            android:hint="请输入验证码"
         	android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/black2"
            android:textSize="12sp" />
        <TextView 
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:padding="3dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:background="@color/orange2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/dianline" />
     <TextView
        android:id="@+id/tv_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/stroke_oval"
        android:gravity="center"
        android:singleLine="true"
        android:text="提交"
        android:textColor="@color/orange2" />
   
</LinearLayout>
