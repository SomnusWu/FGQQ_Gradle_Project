<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_solid_white_r"
     >

    <ImageView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        
        android:layout_gravity="right"
        android:src="@drawable/wdedingdan2_cancel" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wdedingdan_daishouhuo_orange" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:text="交易成功，卖家将收到您的货款"
        android:textColor="@color/orange1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/lijipingjia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_weight="1"
        android:background="@drawable/stroke_orange2"
        
        android:layout_marginBottom="20dp"
        android:gravity="center"
       
       android:layout_marginRight="10dp"
    
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="立即评价"
        android:textColor="@color/orange2"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/dingdanxiangqing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
         android:layout_weight="1"
       android:layout_marginLeft="10dp"
   android:gravity="center"
        android:background="@drawable/stroke_lightgray"
        android:paddingBottom="10dp"
 
       
 
        android:paddingTop="10dp"
        android:text="订单详情"
        android:textColor="@color/black2"
        android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
