<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费总额"
            android:textColor="@color/black1" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_solid_graywhite_r"
            android:hint="请输入消费金额"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/black1"
            android:textColorHint="@color/black2"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/ll_hui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible" >

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ff6534"
            android:gravity="center"
            android:text="惠"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="每满100减3元"
            android:textColor="@color/black2"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cb_status"
            android:button="@null"
            android:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/dian_line_product_e8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/orange2"
            android:gravity="center"
            android:text="CO"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/show_can_user_co"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="CO可低0元"
            android:textColor="@color/black2"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cb_status"
            android:button="@null"
            android:checked="true"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"
            android:textColor="@color/black1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pay_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="0"
            android:textColor="@color/orange1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/solid_orange1_rectangle_r"
        android:gravity="center"
        android:padding="10dp"
        android:text="确认买单"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>